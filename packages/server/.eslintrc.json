{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./packages/server/tsconfig.json"
  },
  "rules": {
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": false
      }
    ],
    "no-underscore-dangle": "off",
    "no-useless-return": "off"
  }
}
